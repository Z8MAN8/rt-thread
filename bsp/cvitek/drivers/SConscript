from building import *

cwd     = GetCurrentDir()
src     = ['drv_uart.c']
CPPDEFINES = []

CPPPATH = [cwd]

if GetDepend('BSP_USING_CV1800B') or GetDepend('BSP_USING_C906_LITTLE') or GetDepend('BSP_USING_CV1812CP') :
    CPPPATH += [cwd + r'/cv1800b']

if GetDepend('BSP_USING_CV1800B'):
    src += ['drv_gpio.c']

if GetDepend('BSP_USING_I2C'):
    src += ['drv_hw_i2c.c']

if GetDepend('BSP_USING_ADC'):
    src += ['drv_adc.c']

if GetDepend('BSP_USING_WDT'):
    src += ['drv_wdt.c']

if GetDepend('BSP_USING_PWM'):
    src += ['drv_pwm.c']
    CPPPATH += [cwd + r'/cv1800b/pwm']
CPPDEFINES += ['-DCONFIG_64BIT']

group = DefineGroup('drivers', src, depend = [''], CPPDEFINES = CPPDEFINES, CPPPATH = CPPPATH)

Return('group')
